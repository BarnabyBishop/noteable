body
	font-size 16px
	padding 20px
	font-family 'Open Sans', Helvetica, Arial, sans-serif

textarea:focus, input:focus
	outline 0

.note
.note-list
	-webkit-box-shadow: 0 2px 1px rgba(0,0,0,0.08);
	box-shadow: 0 2px 1px rgba(0,0,0,0.08);
	-webkit-border-radius 5px
	border-radius 5px

.note-list
	border solid 1px #ccc
	display inline-block
	width 15%
	vertical-align top
	cursor pointer
	margin-right 15px
	display inline-block
	font-weight bold

	div
		padding:10px

		&:not(:last-child)
			border-bottom solid 1px #ddd

		&.selected
			border-bottom: solid 2px #408FB6;
			padding-bottom 9px
.note
	border 1px solid #ccc
	display inline-block
	width 80%

	.title
	.text
		border 0
		width 95%
		font-size 16px

	.title
		font-weight bold
		padding 10px 10px 10px 10px

	.text
		font-family 'Open Sans', Helvetica, Arial, sans-serif
		padding 0px 10px 10px 10px
		height 500px